<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dialog_margin">

    <LinearLayout
        android:id="@+id/countdownBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_current_countdown"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/symbol_is_space"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/currentTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/symbol_zero"/>

            <TextView
                android:id="@+id/secondLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/symbol_s"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/stopButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/ic_stop_24dp" />

        <ImageView
            android:id="@+id/playButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/ic_play_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_countdown"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/symbol_is_space"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:ems="5"
                android:textAlignment="viewEnd"
                android:paddingStart="0dp"
                android:paddingEnd="26dp"
                android:inputType="numberSigned|number"
                android:imeOptions="actionDone"
                android:autofillHints="false"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/inputSecondsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="@id/editTimer"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="6dp"
                android:gravity="start|center"
                android:maxLines="1"
                android:text="@string/symbol_s"
                android:scrollHorizontally="false" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <org.scp.gymlog.ui.common.components.NumberModifierView
            android:id="@+id/modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            app:target="@id/editTimer"
            app:step="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </LinearLayout>
</LinearLayout>
