<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/Theme.GymLog.ActionBar"
        app:title="@string/title_workout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:name="org.scp.gymlog.ui.workout.RoutineFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context=".ui.main.routines.RoutineFragment"
        tools:listitem="@layout/list_element_fragment" />

</LinearLayout>
