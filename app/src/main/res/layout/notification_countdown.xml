<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/secondsG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/compound_notification_countdown"
                android:textColor="@color/green"
                style="@style/TextAppearance.Compat.Notification.Title" />

            <ImageView
                android:id="@+id/arrowG"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_right_24dp"
                android:tint="@color/green"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/exerciseNameG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bench chest"
                style="@style/TextAppearance.Compat.Notification.Title" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarG"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="@color/green" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/secondsO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/compound_notification_countdown"
                android:textColor="@color/orange_light"
                style="@style/TextAppearance.Compat.Notification.Title" />

            <ImageView
                android:id="@+id/arrowO"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_right_24dp"
                android:tint="@color/orange_light"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/exerciseNameO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bench chest"
                style="@style/TextAppearance.Compat.Notification.Title" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarO"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="@color/orange_light" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/secondsR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/compound_notification_countdown"
                android:textColor="@color/red"
                style="@style/TextAppearance.Compat.Notification.Title" />

            <ImageView
                android:id="@+id/arrowR"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_right_24dp"
                android:tint="@color/red"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/exerciseNameR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bench chest"
                style="@style/TextAppearance.Compat.Notification.Title" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarR"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="@color/red" />
    </LinearLayout>

</LinearLayout>