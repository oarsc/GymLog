<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GymLog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Background color. -->
        <item name="android:windowBackground">#FF303030</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_light</item>
        <item name="colorSecondaryVariant">@color/orange_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="colorSurface">@color/actionBarBackground</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/actionBarBackground</item>
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/PrefsTheme</item>
    </style>
</resources>