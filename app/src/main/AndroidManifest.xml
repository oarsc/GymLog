<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GymLog"
        tools:ignore="LockedOrientationActivity">
        <activity
            android:name=".ui.registry.RegistryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.common.activity.ImageSelectorActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.create.CreateExerciseActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.create.CreateVariationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.exercises.ExercisesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.training.TrainingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.exercises.LatestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.exercises.SearchActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.top.TopActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.top.TopSpecificActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.GymLog.NoActionBar"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.dropbox.core.android.AuthActivity"
            android:launchMode="singleTask"
            android:configChanges="orientation|keyboardHidden"
            android:excludeFromRecents="true"
            android:exported="true">
            <intent-filter>
                <data android:scheme="db-fts3973avw0k7hq" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>

        <service
            android:enabled="true"
            android:exported="false"
            android:label="NotificationLoggingWidget"
            android:name=".ui.common.notifications.NotificationLoggingService" />

        <receiver
            android:name=".ui.common.notifications.NotificationLoggingService$ScheduledNotificationBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:process=":remote"/>

    </application>

</manifest>